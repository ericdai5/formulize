{
  "name": "formulize-math",
  "private": false,
  "version": "0.1.21",
  "description": "A powerful formula editor and visualization library for mathematical expressions",
  "type": "module",
  "main": "./dist/formulize.cjs.js",
  "module": "./dist/formulize.es.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/formulize.es.js",
      "require": "./dist/formulize.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./vite-plugin": {
      "import": "./dist/vite-plugin.es.js",
      "require": "./dist/vite-plugin.cjs.js",
      "types": "./dist/types/vite-plugin.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "formula",
    "math",
    "editor",
    "visualization",
    "latex",
    "katex",
    "mathjax",
    "react",
    "component"
  ],
  "author": "Eric Dai <Ericdai2000@gmail.com>, Zain Khan <zain6khan@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericdai5/formulize.git"
  },
  "bugs": {
    "url": "https://github.com/ericdai5/formulize/issues"
  },
  "homepage": "https://github.com/ericdai5/formulize#readme",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "sideEffects": [
    "*.css",
    "src/**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode production && vite build --config vite.config.plugin.ts --mode production",
    "deploy": "rm -rf docs/forge/* && cp -r dist/* docs/forge/",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.7",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/language": "^6.10.1",
    "@codemirror/legacy-modes": "^6.4.0",
    "@codemirror/state": "^6.4.1",
    "@codemirror/view": "^6.38.0",
    "@types/d3": "^7.4.3",
    "@uiw/react-codemirror": "^4.22.0",
    "@xyflow/react": "^12.8.2",
    "acorn": "^8.15.0",
    "better-react-mathjax": "^2.0.3",
    "codemirror": "^6.0.1",
    "d3": "^7.9.0",
    "dompurify": "^3.2.3",
    "dotenv": "^16.4.7",
    "js-beautify": "^1.15.4",
    "js-interpreter": "^6.0.1",
    "katex": "^0.16.11",
    "lodash": "^4.17.21",
    "lucide-react": "^0.471.0",
    "mathjax-full": "3.2.2",
    "mathjs": "^13.2.2",
    "mobx": "^6.12.3",
    "mobx-react-lite": "^4.0.7",
    "mobx-state-tree": "^5.4.1",
    "plotly.js-dist": "^3.0.1",
    "prettier-plugin-latex": "^2.0.1",
    "react-intersection-observer": "^9.8.2",
    "react-refresh": "^0.14.2",
    "react-split": "^2.0.14",
    "react-usestateref": "^1.0.9"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.24.1",
    "@babel/plugin-syntax-decorators": "^7.24.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/dompurify": "^3.2.0",
    "@types/js-beautify": "^1.14.3",
    "@types/katex": "^0.16.7",
    "@types/lodash-es": "^4.17.12",
    "@types/mathjax": "^0.0.40",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "ajv": "^8.17.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scan": "^0.4.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^4.5.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
